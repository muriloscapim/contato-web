@model IEnumerable<ContatoWeb.Models.Contato>
@{
    ViewBag.Title = "Index";
}

<h2>Contatos</h2>

<table class="table table-hover" id="tblContato">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayName("Ação")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var contato in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => contato.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contato.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contato.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contato.Telefone)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = contato.Id },
               new { @class = "btn btn-primary" })

                @Html.ActionLink("Apagar", "Delete", new { id = contato.Id },
              new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </tbody>
</table>